rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }
    
    function isManager() {
      return request.auth.token.role in ['admin', 'manager'];
    }
    
    // Product images
    match /products/{productId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isManager() && request.resource.size < 5 * 1024 * 1024 // 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // User profile images
    match /users/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId
                   && request.resource.size < 2 * 1024 * 1024 // 2MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Warehouse documents
    match /warehouses/{warehouseId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isManager() && request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    // Reports and exports
    match /reports/{reportId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
  }
}
